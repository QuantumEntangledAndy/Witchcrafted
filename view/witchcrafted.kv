#: import CardPanel witchcrafted.cards.card_panel.CardPanel
#: import CardEdit witchcrafted.cards.card_edit.CardEdit
#: import MainPanel witchcrafted.main_panel.MainPanel
#: import ProjectView witchcrafted.project.project_view.ProjectView

#: include card_panel.kv
#: include file_dialogs.kv
#: include card_view.kv
#: include card_edit.kv
#: include project_view.kv

MainPanel:
    id: main_panel
    size_hint: 1., 1.
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False

    selected_card_id: None

    card_view_tab: card_view_tab
    card_view: card_view

    card_edit_tab: card_edit_tab
    card_edit: card_edit

    project_tab: project_tab
    project_view: project_view

    TabbedPanelItem:
        id: project_tab
        text: 'Project'
        ProjectView:
            id: project_view


    TabbedPanelItem:
        id: card_view_tab
        text: 'Card Pool'
        CardView:
            id: card_view

    TabbedPanelItem:
        id: card_edit_tab
        text: 'Edit Card'
        CardEdit:
            id: card_edit

    TabbedPanelItem:
        text: 'Settings'
        on_release: app.panel_settings()
