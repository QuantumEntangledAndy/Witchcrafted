<ProjectView>:
    cols: 1
    rows: 3

    id: project_view

    project: None

    GridLayout:
        cols: 2
        rows: 2
        size_hint: (1, 0.8)

        Label:
            text: "Name: "
            size_hint: (0.2, None)
            height: 60

        TextInput:
            multiline: False
            size_hint: (0.8, None)
            height: 60
            on_text: project_view.project.name = self.text if project_view.project else None

        Label:
            text: "Description: "
            size_hint: (0.2, 0.8)

        TextInput:
            multiline: True
            size_hint: (0.8, 0.8)
            on_text: project_view.project.description = self.text if project_view.project else None

    GridLayout:
        cols: 2
        rows: 2
        size_hint: (1, 0.2)

        Button:
            text: "Save"
            on_release: project_view.save_project()

        Button:
            text: "Load"
            on_release: project_view.save_project()

        Button:
            text: "Revert Changes"
            on_release: project_view.revert_project()
        Button:
            text: "Commit Changes"
            on_release: project_view.commit_project()
